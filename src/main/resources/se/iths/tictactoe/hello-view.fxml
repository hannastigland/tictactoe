<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="se.iths.tictactoe.HelloController">

    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
       <GridPane fx:id="gridPane" prefHeight="138.0" prefWidth="144.0" BorderPane.alignment="CENTER">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints maxHeight="100.0" vgrow="SOMETIMES"/>
               <RowConstraints maxHeight="100.0" vgrow="SOMETIMES"/>
               <RowConstraints maxHeight="100.0" vgrow="SOMETIMES"/>
           </rowConstraints>
           <Button fx:id="b1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b2" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="1" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b3" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="2" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b4" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.rowIndex="1" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="1" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b6" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="1" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b7" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.rowIndex="2" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b8" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="2" onMouseClicked="#buttonClicked"/>
           <Button fx:id="b9" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="2" onMouseClicked="#buttonClicked"/>
       </GridPane>
   </center>
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: Pink;" text="Tic Tac Toe" textAlignment="CENTER" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <right>
       <VBox prefHeight="310.0" prefWidth="165.0" BorderPane.alignment="CENTER">
           <Label fx:id="nameOfWinner" prefHeight="50.0" prefWidth="150.0" text="Winner:"/>
           <Label prefHeight="50.0" prefWidth="150.0" text="Your score: "/>
           <Label fx:id="yourScore" prefHeight="50.0" prefWidth="150.0" text="${controller.model.yourScore}"/>
           <Label prefHeight="50.0" prefWidth="150.0" text="Computer score: "/>
           <Label fx:id="aiScore" prefHeight="50.0" prefWidth="150.0" text="${controller.model.aiScore}"/>
           <Button fx:id="resetButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                   onMouseClicked="#resetButtonClicked" text="Reset board" textAlignment="CENTER"/>
       </VBox>
   </right>
</BorderPane>
